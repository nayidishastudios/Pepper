<%= form_for @machine, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :machine_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :machine_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :school_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :school_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ssl_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ssl_key, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                machine_path, :class => 'btn' %>
  </div>
<% end %>
