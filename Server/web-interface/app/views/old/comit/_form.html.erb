<%= form_for @commit, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :repository_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :repository_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :commit_hash, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :commit_hash, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :message, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_update, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_update, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :time, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                commit_path, :class => 'btn' %>
  </div>
<% end %>
