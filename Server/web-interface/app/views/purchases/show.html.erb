<%- model_class = Purchase -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><!--<%= model_class.human_attribute_name(:typ) %>-->Type:</strong></dt>
  <% arr = [ "Group", "School", "Machine" ] %>
  <dd><%= arr[@purchase.typ] %></dd>
  <dt><strong><!--<%= model_class.human_attribute_name(:typ_id) %>-->Group/School/Machine:</strong></dt>
  <dd><%= Kernel.const_get(arr[@purchase.typ]).find(@purchase.typ_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:repository_id) %>:</strong></dt>
  <dd><%= Repository.find(@purchase.repository_id).name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              purchases_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_path(@purchase), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_path(@purchase),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
