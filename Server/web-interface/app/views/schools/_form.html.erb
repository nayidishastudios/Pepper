<br>
<%= bootstrap_form_for @school, :html => { :class => 'form-horizontal' } do |f| %>
  <% rtr = [] %>
  <% groups = Group.all %>
  <% groups.each do |group| %>
    <% rtr << [  "#{group.name}", group.id ] %>
  <% end %>
  <%= f.select :group_id, options_for_select(rtr) %>
  <%= f.text_field :name %>
  <%= f.text_area :contact, :cols => "30", :rows => "5" %>
  <%= f.text_area :comments, :cols => "30", :rows => "5" %>
  <%= f.actions do %>
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schools_path, :class => 'btn' %>
  <% end %>
<% end %>
