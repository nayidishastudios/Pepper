<%- model_class = Fil -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:comit_id) %>:</strong></dt>
  <dd><%= Comit.find(@fil.comit_id).comit_hash %></dd>
  <dt><strong><%= model_class.human_attribute_name(:filename) %>:</strong></dt>
  <dd><%= @fil.filename %></dd>
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @fil.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action) %>:</strong></dt>
  <% actions = [ "Created", "Modified", "Deleted" ] %>
  <dd><%= actions[@fil.action] %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fils_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fil_path(@fil), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fil_path(@fil),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
